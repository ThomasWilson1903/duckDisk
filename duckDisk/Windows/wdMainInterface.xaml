<Window x:Class="duckDisk.Windows.wdMainInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:duckDisk.Windows"
        mc:Ignorable="d"
        Title="duckDisk" Height="720" Width="1080" MinHeight="720" MinWidth="1080">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230*"/>
            <ColumnDefinition Width="850*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#425559">

        </Grid>
        <Grid Grid.Column="1">
            <Border Margin="30" CornerRadius="10" Padding="10">
                <Border.Background>
                    <SolidColorBrush Color="#D9D9D9" Opacity="0.7"/>
                </Border.Background>
                <ListView x:Name="lvMain">
                    <ListView.Background>
                        <SolidColorBrush Color="Transparent"/>
                    </ListView.Background>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Margin"  Value="5"/>
                            <EventSetter Event='MouseDoubleClick' Handler='HandleDoubleClick'/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="300" Height="300">
                                <Border>
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding imageTypeIcon}"/>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Grid>

    </Grid>
</Window>
